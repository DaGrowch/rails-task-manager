<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed %> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %></li>
  <% end %>
</ul>
<p><%= link_to new_path do %>
  <i class="fa-light fa-plus"></i> Add a new task
<% end %></p>
